@import url('https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@500;700;900&display=swap')

//Primary
$pale-blue = hsl(225, 100%, 94%)
$bright-blue = hsl(245, 75%, 52%)

//Neutral
$cery-pale-blue = hsl(225, 100%, 98%)
$desaturated-blue = hsl(224, 23%, 55%)
$dark-blue = hsl(223, 47%, 23%)

// Font Weights
$font-medium = 500
$font-bold = 700
$font-black = 900

*
  margin 0
  padding 0
  font-family 'Red Hat Display', sans-serif

body
  display flex
  justify-content center
  align-items center
  flex-direction column
  height 100vh
  color $desaturated-blue
  background-color $pale-blue
  background-image url("/images/pattern-background-mobile.svg")
  background-repeat repeat-x
  background-position-x center
  background-position-y top
  background-size contain

  @media (min-width 450px)
    background-image url("/images/pattern-background-desktop.svg")
    background-size auto

p
  font-size 16px

h1
  color $dark-blue
  font-weight $font-black


.card
  box-shadow 0 10px 20px -1px rgba($bright-blue, 0.15)
  border none
  border-radius 1.5rem
  background-color white
  max-width 450px
  margin 0 1.5rem

  > header
    > img
      width 100%
      object-fit cover
      border-width 1px
      border-top-left-radius @border-radius
      border-top-right-radius @border-radius

  > main
    display flex
    flex-direction column
    align-items center
    margin 0 2rem
    @media (min-width 450px)
      margin 0 3rem

    > h1
      margin-top 2rem
      margin-bottom 1rem
      font-size 27px

    > p
      text-align center

  > footer
    margin 0 2rem 2.5rem
    display flex
    flex-direction column
    @media (min-width 450px)
      margin 0 3rem 3rem


.plan-info
  display flex
  justify-content space-between
  align-items center
  width 100%
  background-color $cery-pale-blue
  padding 1rem 0
  margin-bottom 2.5rem
  margin-top 2.5rem
  border-width 1px
  border-radius 0.8rem

  > div
    align-items center

  > div:first-of-type
    display flex
    margin-left 1rem

  > a
    font-size 14px
    text-decoration underline

    &:hover
      opacity 0.7
      text-decoration none

    &:focus
      opacity 0.7
      text-decoration none
      outline none


.plan-details
  display flex
  flex-direction column
  margin-left .75rem
  @media (min-width 450px)
    margin-left 1.25rem

  > h2
    font-size 16px
    color $dark-blue
    font-weight $font-black


.change-plan
  margin-right 1rem
  color $bright-blue
  font-weight $font-bold


.proceed-button
  font-size 16px
  background-color $bright-blue
  color white
  font-weight $font-bold
  border none
  border-radius 0.8rem
  padding-top 1em
  padding-bottom 1em
  cursor pointer
  box-shadow 0 12px 10px -1px rgba($bright-blue, 0.2)

  &:hover
    opacity 0.7

  &:focus
    opacity 0.7
    border none
    outline none


.cancel-order-button
  color $desaturated-blue
  font-weight $font-black
  text-align center
  margin-top 1rem
  cursor pointer
  border none
  background none

  &:hover
    color $dark-blue